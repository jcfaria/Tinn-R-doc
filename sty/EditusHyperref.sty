\RequirePackage{hyperref}

\hypersetup{colorlinks=true,
  linkcolor=LinkColor,
  linkbordercolor={1 1 1},
  citecolor=darkgreen,
  filecolor=LinkColor,
  menucolor=LinkColor,
  urlcolor=darkgreen,
  pdftitle={Editus eBook Series},      % eBook
  %pdftitle={User guide - Tinn-R Team}, % User gUide
