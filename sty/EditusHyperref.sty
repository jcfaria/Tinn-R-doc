  pdfcreator={LaTeX},
  pdfstartview=Fit,
  pdffitwindow=true,
  bookmarksopen=true,
  bookmarksopenlevel=0,
  bookmarksnumbered=true,
  pdfpagelayout=TwoPageRight,
  hyperfootnotes=false % use this with footmisc package
}
